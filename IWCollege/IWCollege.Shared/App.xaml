<Application
    x:Class="IWCollege.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IWCollege">
    
    <!-- this allows for resource files to be shared/managed from one place across all projects -->
    
    <Application.Resources>
        
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                
                <!-- colours -->
                <ResourceDictionary Source="Resources/Colours.xaml" />
                
                <!-- fonts -->
                <ResourceDictionary Source="Resources/Fonts.xaml" />
                
                <!-- control styles for styling input boxes, etc -->
                <ResourceDictionary Source="Resources/ControlStyles.xaml" />
                
                <!-- converters for taking a input and giving an output value -->
                <ResourceDictionary Source="Resources/Converters.xaml" />
                
                <!-- templates for lists -->
                <ResourceDictionary Source="Resources/Templates.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
        
    </Application.Resources>
    

</Application>