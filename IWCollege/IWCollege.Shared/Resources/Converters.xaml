    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IWCollege.Resources"
    xmlns:converters="using:IWCollege.Resources.Converters">

    // an example of a converter
    // converters are used in conjunction with XAML
